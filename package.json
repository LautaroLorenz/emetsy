{
  "name": "emetsy",
  "version": "0.0.0",
  "main": "index.js",
  "author": {
    "name": "Lautaro Lorenz",
    "email": "lautaro.lorenz@gmail.com"
  },
  "build": {
    "appId": "com.emetsy.EMeTSy",
    "productName": "EMeTSy",
    "files": [
      "dist/emetsy",
      "app/**/*",
      "package.json"
    ]
  },
  "scripts": {
    "ng": "ng serve",
    "clean": "rimraf dist",
    "prestart": "npm run clean",
    "start": "concurrently -k \"ng serve\" \"npm run electron\"",
    "prebuild": "npm run clean",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "prerelease": "npm run build --prod",
    "release": "electron-builder",
    "electron": "wait-on http://localhost:4200 && electron .",
    "rebuild": "electron-rebuild -f -w sqlite3",
    "postinstall": "electron-builder install-app-deps",
    "migrate": "knex migrate:latest --knexfile app/resources/data/knexfile.js",
    "seed": "knex seed:run --knexfile app/resources/data/knexfile.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.0.0",
    "@angular/cdk": "^14.0.2",
    "@angular/common": "^14.0.0",
    "@angular/compiler": "^14.0.0",
    "@angular/core": "^14.0.0",
    "@angular/forms": "^14.0.0",
    "@angular/platform-browser": "^14.0.0",
    "@angular/platform-browser-dynamic": "^14.0.0",
    "@angular/router": "^14.0.0",
    "knex": "^2.1.0",
    "primeflex": "^3.2.1",
    "primeicons": "^5.0.0",
    "primeng": "^13.4.1",
    "rxjs": "~7.5.0",
    "sqlite3": "^5.0.8",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.0.2",
    "@angular/cli": "~14.0.2",
    "@angular/compiler-cli": "^14.0.0",
    "@types/jasmine": "~4.0.0",
    "concurrently": "^7.2.2",
    "electron": "^19.0.4",
    "electron-builder": "^23.0.3",
    "electron-rebuild": "^3.2.7",
    "jasmine-core": "~4.1.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "rimraf": "^3.0.2",
    "typescript": "~4.7.2",
    "wait-on": "^6.0.1"
  }
}
